FROM alpine:3.12.0

RUN apk update && apk add mariadb mariadb-client
RUN apk update \
    && apk upgrade \
    && apk add bash \
    && apk add openssl \
    && apk add nginx \
    && apk add openssh \
    && mkdir -p /run/nginx \
    && apk add sudo

COPY conf/start.sh /tmp/start.sh
COPY conf/my.cnf /etc/my.cnf
COPY conf/initmysql.sh /tmp/initmysql.sh


EXPOSE 3306

CMD sudo bash /tmp/start.sh