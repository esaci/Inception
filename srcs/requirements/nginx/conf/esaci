server {
    listen 80;
    listen [::]:80;
    server_name esaci.42.fr;
    return 301 https://esaci.42.fr;
}

server {
	listen 443 ssl ;
	listen [::]:443 ssl ;
	
	ssl_certificate /etc/ssl/certs/esaci.crt;
	ssl_certificate_key /etc/ssl/private/esaci.key;

	root /var/www/esaci/html;

	index index.html index.htm index.nginx-debian.html index.php;

}