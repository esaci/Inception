version: "3"
services:
  mariadb:
    image: mariadb
    container_name: mariadb
    networks:
      - esacicorp
    volumes:
      - '/home/esaci/data/mariadb/:/var/lib/mysql'
    build:
      context: ./requirements/mariadb/
    restart: always
    env_file: .env
  wordpress:
    image: wordpress
    container_name: wordpress
    networks:
      - esacicorp
    volumes:
      - '/home/esaci/data/html:/var/www/esaci/html/wordpress'
    build:
      context: ./requirements/wordpress/
    command: php -S 0.0.0.0:9000 -t /wordpress
    depends_on:
      - mariadb
    restart: always
  nginx:
    image: nginx
    container_name: nginx
    hostname: esaci.42.fr
    domainname: esaci.42.fr
    networks:
       esacicorp:
          aliases:
            - esaci.42.fr
    volumes:
      - '/home/esaci/data/html:/var/www/esaci/html/'
    ports:
      - "443:443"
    build:
      context: ./requirements/nginx/
    depends_on:
      - wordpress
    restart: always
networks:
  esacicorp:
    driver: bridge